<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - NTPC Safety Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f4f7fa; }
        .card { border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
        .table-responsive { margin-top: 20px; }
        .badge-pending { background-color: #ffc107; }
        .badge-forwarded { background-color: #17a2b8; }
        .badge-closed { background-color: #28a745; }
        .badge-approved { background-color: #007bff; }
        .badge-rejected { background-color: #dc3545; }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <%- include('partials/navbar') %>
    <div class="container my-5">
        <div class="card p-4">
            <h1 class="card-title text-center mb-4">Welcome, <%= user.name %> (Admin)</h1>
            <% if (successMessage) { %>
                <div class="alert alert-success"><%= successMessage %></div>
            <% } %>
            <% if (errorMessage) { %>
                <div class="alert alert-danger"><%= errorMessage %></div>
            <% } %>
            <h3>All Observations</h3>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Zone</th>
                            <th>Zone Leaders</th>
                            <th>EIC</th>
                            <th>Department</th>
                            <th>Location</th>
                            <th>Description</th>
                            <th>File</th>
                            <th>Status</th>
                            <th>Comments</th>
                            <th>Submissions</th>
                            <th>Created At</th>
                            <th>Forwarded By</th>
                            <th>Forwarded At</th>
                            <th>Closed By</th>
                            <th>Closed At</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% observations.forEach(obs => { %>
                            <tr>
                                <td><%= obs.zone %></td>
                                <td><%= Array.isArray(obs.zoneLeaders) ? obs.zoneLeaders.join(', ') : obs.zoneLeaders || 'N/A' %></td>
                                <td><%= obs.eic || 'N/A' %></td>
                                <td><%= obs.department %></td>
                                <td><%= obs.location %></td>
                                <td><%= obs.description %></td>
                                <td>
                                    <% if (obs.uploadedFileUrl) { %>
                                        <a href="<%= obs.uploadedFileUrl %>" target="_blank">View</a>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge badge-<%= obs.status === 'pending' ? 'pending' : obs.status === 'forwarded' ? 'forwarded' : obs.status === 'closed' ? 'closed' : obs.status === 'approved' ? 'approved' : 'rejected' %>">
                                        <%= obs.status %>
                                    </span>
                                </td>
                                <td>
                                    <% if (obs.comments && obs.comments.length > 0) { %>
                                        <ul>
                                            <% obs.comments.forEach(comment => { %>
                                                <li><strong><%= comment.userId.name %>:</strong> <%= comment.comment %> (<%= comment.createdAt.toLocaleString() %>)</li>
                                            <% }) %>
                                        </ul>
                                    <% } else { %>
                                        No comments
                                    <% } %>
                                </td>
                                <td>
                                    <% if (obs.submissions && obs.submissions.length > 0) { %>
                                        <ul>
                                            <% obs.submissions.forEach(submission => { %>
                                                <li>
                                                    <strong><%= submission.vendorId.name %>:</strong> <%= submission.description %> 
                                                    <% if (submission.fileUrl) { %>
                                                        (<a href="<%= submission.fileUrl %>" target="_blank">View File</a>)
                                                    <% } %>
                                                    (<%= submission.createdAt.toLocaleString() %>)
                                                </li>
                                            <% }) %>
                                        </ul>
                                    <% } else { %>
                                        No submissions
                                    <% } %>
                                </td>
                                <td><%= obs.createdAt.toLocaleString() %></td>
                                <td><%= obs.forwardedBy || 'N/A' %></td>
                                <td><%= obs.forwardedAt ? obs.forwardedAt.toLocaleString() : 'N/A' %></td>
                                <td><%= obs.closedBy || 'N/A' %></td>
                                <td><%= obs.closedAt ? obs.closedAt.toLocaleString() : 'N/A' %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>