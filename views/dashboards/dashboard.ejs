<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard - NTPC Safety Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f7fa;
    }
    .card {
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .table-responsive {
      margin-top: 20px;
    }
    .badge-pending {
      background-color: #ffc107;
    }
    .badge-forwarded {
      background-color: #17a2b8;
    }
    .badge-closed {
      background-color: #28a745;
    }
    .badge-approved {
      background-color: #007bff;
    }
    .badge-rejected {
      background-color: #dc3545;
    }
    .badge-under_review {
      background-color: #6c757d;
    }
    .sidebar {
      transition: width 0.3s ease;
    }
    .progress-bar {
      height: 20px;
      border-radius: 5px;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">
  <%- include('../partials/navbar') %>

  <div class="container-fluid my-5">
    <div class="row">
      <!-- Left Sidebar (Collapsible Sidebar) -->
      <div class="col-md-3">
        <div id="sidebar" class="sidebar bg-dark text-white min-h-screen p-4" style="width: 250px;">
          <div class="d-flex align-items-center justify-content-between mb-4">
            <h5 class="text-white font-weight-bold">NTPC Safety Portal</h5>
            <button id="toggleSidebar" class="text-white btn btn-link p-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <nav id="sidebarNav">
            <div class="list-group">
              <a href="/record-suggestion" class="list-group-item list-group-item-action text-white bg-dark border-0 mb-1">Record Suggestion</a>
              <a href="/report-near-miss" class="list-group-item list-group-item-action text-white bg-dark border-0 mb-1">Report Near Miss</a>
              <a href="/submit-poster" class="list-group-item list-group-item-action text-white bg-dark border-0 mb-1">Submit Poster/Slogan</a>
              <a href="/safety-policy" class="list-group-item list-group-item-action text-white bg-dark border-0 mb-1">NTPC Safety Policy Compliance</a>
              <a href="/" class="list-group-item list-group-item-action text-white bg-dark border-0 mb-1">Safety Observation</a>
              <a href="/safety-permit" class="list-group-item list-group-item-action text-white bg-dark border-0 mb-1">Safety Permit</a>
              <% if (user.role === 'admin') { %>
                <a href="/safety-admin" class="list-group-item list-group-item-action text-white bg-dark border-0 mb-1">Safety Admin</a>
              <% } %>
              <a href="/auth/logout" class="list-group-item list-group-item-action text-white bg-dark border-0 mb-1" onclick="confirmLogout()">Logout</a>
            </div>
          </nav>
        </div>
      </div>

      <!-- Main Content -->
      <div class="col-md-9">
        <div class="card p-4 mb-4">
          <h1 class="card-title text-center mb-4">Welcome, <%= user.name %> (<%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>)</h1>

          <!-- Success/Error Messages -->
          <% if (successMessage) { %>
            <div class="alert alert-success" role="alert"><%= successMessage %></div>
          <% } %>
          <% if (errorMessage) { %>
            <div class="alert alert-danger" role="alert"><%= errorMessage %></div>
          <% } %>

          <!-- Statistics Summary -->
          <div class="row mb-4">
            <div class="col-md-4">
              <div class="card text-center">
                <div class="card-body">
                  <h5 class="card-title text-danger">Total Safety Observations</h5>
                  <p class="card-text display-4 text-danger" id="total-observations"><%= stats.totalObservations %></p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card text-center">
                <div class="card-body">
                  <h5 class="card-title text-success">Safety Suggestions</h5>
                  <p class="card-text display-4 text-success">0</p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card text-center">
                <div class="card-body">
                  <h5 class="card-title text-warning">Reported Near Misses</h5>
                  <p class="card-text display-4 text-warning"><%= stats.nearMisses %></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Zone-wise Observations -->
          <div class="card mb-4">
            <div class="card-body">
              <h2 class="card-title mb-4">Zone-wise Observations</h2>
              <div class="list-group">
                <% zones.forEach(zone => { %>
                  <div class="list-group-item d-flex align-items-center">
                    <div class="w-25 text-sm font-medium"><%= zone.name %></div>
                    <div class="w-50">
                      <div class="progress-bar bg-light">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: <%= (zone.count / maxObservationCount) * 100 %>%;" aria-valuenow="<%= zone.count %>" aria-valuemin="0" aria-valuemax="<%= maxObservationCount %>"></div>
                      </div>
                    </div>
                    <div class="w-25 text-end text-sm font-medium"><%= zone.count %></div>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>

          <!-- Role-Specific Observations -->
          <div class="card mb-4">
            <div class="card-body">
              <h2 class="card-title mb-4">Your Observations</h2>
              <% if (observations.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>Zone</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Severity</th>
                        <th>Created At</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% observations.forEach(obs => { %>
                        <tr>
                          <td><%= obs.zone %></td>
                          <td><%= obs.description.length > 50 ? obs.description.substring(0, 50) + '...' : obs.description %></td>
                          <td>
                            <span class="badge badge-<%= obs.status === 'pending' ? 'pending' : obs.status === 'forwarded' ? 'forwarded' : obs.status === 'closed' ? 'closed' : obs.status === 'approved' ? 'approved' : obs.status === 'rejected' ? 'rejected' : 'under_review' %>">
                              <%= obs.status %>
                            </span>
                          </td>
                          <td><%= obs.severity %></td>
                          <td><%= obs.createdAt.toLocaleString() %></td>
                          <td>
                            <a href="/issue/<%= obs._id %>" class="btn btn-sm btn-primary">View</a>
                            <% if (user.role === 'normal' && obs.status === 'pending') { %>
                              <a href="/observation/edit/<%= obs._id %>" class="btn btn-sm btn-warning">Edit</a>
                              <form action="/observation/delete/<%= obs._id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this observation?')">Delete</button>
                              </form>
                            <% } %>
                            <% if (user.role === 'eic' && ['pending', 'forwarded'].includes(obs.status)) { %>
                              <form action="/approve" method="POST" class="d-inline">
                                <input type="hidden" name="observationId" value="<%= obs._id %>">
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                              </form>
                              <form action="/reject" method="POST" class="d-inline">
                                <input type="hidden" name="observationId" value="<%= obs._id %>">
                                <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                              </form>
                            <% } %>
                            <% if (user.role === 'vendor' && obs.status === 'forwarded' && obs.vendorId.toString() === user._id.toString()) { %>
                              <a href="/vendor/submit/<%= obs._id %>" class="btn btn-sm btn-info">Submit Work</a>
                            <% } %>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <p class="text-muted">No observations found.</p>
              <% } %>
            </div>
          </div>

          <!-- Near Miss Incidents -->
          <div class="card">
            <div class="card-body">
              <h2 class="card-title mb-4">Near Miss Incidents</h2>
              <% if (nearMisses.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>Zone</th>
                        <th>Details</th>
                        <th>Date</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% nearMisses.forEach(nearMiss => { %>
                        <tr>
                          <td><%= nearMiss.incidentZone %></td>
                          <td><%= nearMiss.incidentDetails.length > 50 ? nearMiss.incidentDetails.substring(0, 50) + '...' : nearMiss.incidentDetails %></td>
                          <td><%= nearMiss.incidentDate.toLocaleString() %></td>
                          <td>
                            <a href="/near-miss/<%= nearMiss._id %>" class="btn btn-sm btn-primary">View</a>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <p class="text-muted">No near miss incidents found.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Sidebar toggle functionality
    const toggleSidebar = document.getElementById('toggleSidebar');
    const sidebar = document.getElementById('sidebar');
    const sidebarNav = document.getElementById('sidebarNav');
    toggleSidebar.addEventListener('click', () => {
      sidebar.classList.toggle('w-250px');
      sidebar.classList.toggle('w-60px');
      sidebar.querySelector('h5').classList.toggle('d-none');
      sidebarNav.classList.toggle('d-none');
    });

    function confirmLogout() {
      if (confirm('Are you sure you want to logout?')) {
        window.location.href = '/auth/logout';
      }
    }

    // Real-time observation count update via SSE
    const totalObservations = document.getElementById('total-observations');
    const source = new EventSource('/observation-count');
    source.onmessage = function(event) {
      const data = JSON.parse(event.data);
      totalObservations.textContent = data.count;
    };
    source.onerror = function() {
      console.error('SSE connection error. Retrying...');
      // EventSource automatically retries
    };
  </script>
</body>
</html>