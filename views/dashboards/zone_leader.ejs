<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zone Leader Dashboard - NTPC Safety Management</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold">Welcome, <%= user.name %> (Zone Leader)</h1>
            <button onclick="confirmLogout()" class="bg-red-500 text-white p-2 rounded-md hover:bg-red-600">Logout</button>
        </div>
        <% if (successMessage) { %>
            <p class="text-green-500 mb-4"><%= successMessage %></p>
        <% } %>
        <% if (errorMessage) { %>
            <p class="text-red-500 mb-4"><%= errorMessage %></p>
        <% } %>
        <a href="/" class="bg-blue-500 text-white p-2 rounded-md mb-4 inline-block">Record New Observation</a>
        <h2 class="text-xl font-semibold mb-2">Observations in Your Zone</h2>
        <table class="w-full border">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border p-2">Description</th>
                    <th class="border p-2">Status</th>
                    <th class="border p-2">Comments</th>
                    <th class="border p-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% observations.forEach(obs => { %>
                    <tr>
                        <td class="border p-2"><%= obs.description %></td>
                        <td class="border p-2"><%= obs.status %></td>
                        <td class="border p-2">
                            <% obs.comments.forEach(comment => { %>
                                <p><strong><%= comment.userId ? comment.userId.name : 'Anonymous' %>:</strong> <%= comment.comment %> (<%= comment.createdAt.toLocaleString() %>)</p>
                            <% }) %>
                            <form action="/comment" method="POST" class="mt-2">
                                <input type="hidden" name="observationId" value="<%= obs._id %>">
                                <textarea name="comment" class="w-full p-2 border rounded-md" placeholder="Add a comment"></textarea>
                                <button type="submit" class="bg-blue-500 text-white p-1 rounded-md mt-1">Add Comment</button>
                            </form>
                        </td>
                        <td class="border p-2">
                            <% if (obs.status === 'pending' || obs.status === 'approved') { %>
                                <form action="/forward" method="POST">
                                    <input type="hidden" name="observationId" value="<%= obs._id %>">
                                    <select name="vendorId" class="p-1 border rounded-md">
                                        <option value="">Select Vendor</option>
                                        <% vendors.forEach(vendor => { %>
                                            <option value="<%= vendor._id %>"><%= vendor.name %></option>
                                        <% }) %>
                                    </select>
                                    <button type="submit" class="bg-green-500 text-white p-1 rounded-md mt-1">Forward to Vendor</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script>
        function confirmLogout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/auth/logout';
            }
        }
    </script>
</body>
</html>