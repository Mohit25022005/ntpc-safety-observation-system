<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Dashboard - NTPC Safety Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f4f7fa;
    }
    .card {
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .table-responsive {
      margin-top: 20px;
    }
    .badge-pending {
      background-color: #ffc107;
    }
    .badge-forwarded {
      background-color: #17a2b8;
    }
    .badge-closed {
      background-color: #28a745;
    }
    .badge-approved {
      background-color: #007bff;
    }
    .badge-rejected {
      background-color: #dc3545;
    }
    .badge-under_review {
      background-color: #6c757d;
    }

    /* Hide navbar contents but keep navbar bar */
    nav.navbar > .container-fluid > * {
      display: none !important;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">
  <%- include('../partials/navbar') %>

  <div class="container my-5">
    <div class="row">
      <!-- Left Sidebar -->
      <div class="col-md-3">
        <div class="card p-3 mb-4" style="min-height: 400px;">
          <h5 class="mb-3">Menu</h5>
          <div class="list-group">
            <a href="/" class="list-group-item list-group-item-action">Record Observation</a>
            <a href="/dashboard" class="list-group-item list-group-item-action">See Observation</a>
          </div>
        </div>
      </div>

      <!-- Right Content -->
      <div class="col-md-9">
        <div class="card p-4">
          <h1 class="card-title text-center mb-4">Welcome, <%= user.name %> (Zone Leader)</h1>

          <% if (successMessage) { %>
            <div class="alert alert-success"><%= successMessage %></div>
          <% } %>
          <% if (errorMessage) { %>
            <div class="alert alert-danger"><%= errorMessage %></div>
          <% } %>

          <!-- Open Observations Section -->
          <h3>Open Observations</h3>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Zone</th>
                  <th>Description</th>
                  <th>Severity</th>
                  <th>Status</th>
                  <th>Created At</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% observations.forEach(obs => { %>
                  <tr>
                    <td><%= obs.zone %></td>
                    <td><%= obs.description.length > 50 ? obs.description.substring(0, 50) + '...' : obs.description %></td>
                    <td><%= obs.severity %></td>
                    <td>
                      <span class="badge badge-<%= 
                        obs.status === 'pending' ? 'pending' : 
                        obs.status === 'forwarded' ? 'forwarded' : 
                        obs.status === 'closed' ? 'closed' : 
                        obs.status === 'approved' ? 'approved' : 
                        obs.status === 'rejected' ? 'rejected' : 
                        'under_review' 
                      %>">
                        <%= obs.status %>
                      </span>
                    </td>
                    <td><%= obs.createdAt.toLocaleString() %></td>
                    <td>
                      <a href="/issue/<%= obs._id %>" class="btn btn-sm btn-primary">View Details</a>
                      <a href="/observation/edit/<%= obs._id %>" class="btn btn-sm btn-warning">Edit</a>
                      <form action="/observation/delete/<%= obs._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this observation?')">Delete</button>
                      </form>
                      <% if (obs.status === 'pending' || obs.status === 'approved') { %>
                      <form action="/forward" method="POST" style="display:inline;">
                        <input type="hidden" name="observationId" value="<%= obs._id %>" />
                        <select name="vendorId" required class="form-select form-select-sm d-inline" style="width: 150px;">
                          <option value="">Select Vendor</option>
                          <% vendors.forEach((vendor) => { %>
                            <option value="<%= vendor._id %>"><%= vendor.name %></option>
                          <% }) %>
                        </select>
                        <button type="submit" class="btn btn-sm btn-info">Forward to Vendor</button>
                      </form>
                      <% } %>
                      <% if (obs.status === 'under_review') { %>
                      <form action="/zone-leader/close" method="POST" style="display:inline;">
                        <input type="hidden" name="observationId" value="<%= obs._id %>" />
                        <button type="submit" class="btn btn-sm btn-success">Close</button>
                      </form>
                      <form action="/zone-leader/resend-to-vendor" method="POST" style="display:inline;">
                        <input type="hidden" name="observationId" value="<%= obs._id %>" />
                        <button type="submit" class="btn btn-sm btn-warning">Resend to Vendor</button>
                      </form>
                      <% } %>
                      <form action="/comment" method="POST" style="display:inline;">
                        <input type="hidden" name="observationId" value="<%= obs._id %>" />
                        <input type="text" name="comment" placeholder="Add comment" required class="form-control form-control-sm d-inline" style="width: 150px" />
                        <button type="submit" class="btn btn-sm btn-secondary">Comment</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Closed Observations Section -->
          <h3 class="mt-5">Closed Observations</h3>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Zone</th>
                  <th>Description</th>
                  <th>Severity</th>
                  <th>Status</th>
                  <th>Created At</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% closedObservations.forEach((obs) => { %>
                  <tr>
                    <td><%= obs.zone %></td>
                    <td><%= obs.description.length > 50 ? obs.description.substring(0, 50) + '...' : obs.description %></td>
                    <td><%= obs.severity %></td>
                    <td>
                      <span class="badge badge-<%= 
                        obs.status === 'pending' ? 'pending' : 
                        obs.status === 'forwarded' ? 'forwarded' : 
                        obs.status === 'closed' ? 'closed' : 
                        obs.status === 'approved' ? 'approved' : 
                        obs.status === 'rejected' ? 'rejected' : 
                        'under_review' 
                      %>">
                        <%= obs.status %>
                      </span>
                    </td>
                    <td><%= obs.createdAt.toLocaleString() %></td>
                    <td>
                      <a href="/issue/<%= obs._id %>" class="btn btn-sm btn-primary">View Details</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
