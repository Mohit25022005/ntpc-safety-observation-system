<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NTPC Safety Observation System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- GSAP for animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <!-- ScrollTrigger for scroll animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f6fa;
            color: #333;
        }
        .navbar {
            background-color: #003087;
            padding: 15px 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 500;
        }
        .nav-link:hover {
            color: #ffd700 !important;
        }
        .hero-section {
            position: relative;
            height: 80vh;
            background: url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center/cover;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }
        .hero-content {
            z-index: 2;
        }
        .hero-content h1 {
            font-size: 3rem;
            font-weight: 700;
            opacity: 0;
        }
        .hero-content p {
            font-size: 1.5rem;
            margin: 20px 0;
            opacity: 0;
        }
        .btn-cta {
            background-color: #ffd700;
            color: #003087;
            padding: 12px 30px;
            font-size: 1.2rem;
            font-weight: 600;
            border: none;
            border-radius: 5px;
            transition: transform 0.3s ease;
            opacity: 0;
        }
        .btn-cta:hover {
            transform: scale(1.05);
            background-color: #e6c200;
        }
        .features-section {
            padding: 60px 0;
            background-color: #fff;
        }
        .feature-card {
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            opacity: 0;
            transform: translateY(50px);
        }
        .feature-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }
        .footer {
            background-color: #003087;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">NTPC Safety Observation System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <h1>Safety First at NTPC</h1>
            <p>Empowering a safer tomorrow through observation and action.</p>
            <a href="#observation-form" class="btn btn-cta">Report an Observation</a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <h2 class="text-center mb-5">Why Choose Us?</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <img src="https://images.unsplash.com/photo-1516321318428-292f9a01b9a2?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=60" alt="Safety Protocols">
                        <h3>Robust Safety Protocols</h3>
                        <p>Our system ensures all safety observations are tracked and resolved efficiently.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=60" alt="Real-Time Reporting">
                        <h3>Real-Time Reporting</h3>
                        <p>Submit observations instantly and get updates on the go.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=60" alt="Collaborative Workflow">
                        <h3>Collaborative Workflow</h3>
                        <p>Work seamlessly with Zone Leaders, EICs, and Vendors to ensure safety.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Observation Form Section -->
    <section id="observation-form" class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">Submit a Safety Observation</h2>
            <% if (successMessage) { %>
                <div class="alert alert-success"><%= successMessage %></div>
            <% } %>
            <% if (errorMessage) { %>
                <div class="alert alert-danger"><%= errorMessage %></div>
            <% } %>
            <form action="/submit" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="zone" class="form-label">Zone</label>
                        <select id="zone" name="zone" class="form-select" required>
                            <option value="">Select Zone</option>
                            <% zones.forEach(zone => { %>
                                <option value="<%= zone %>"><%= zone %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="zoneLeaders" class="form-label">Zone Leaders</label>
                        <select id="zoneLeaders" name="zoneLeaders" class="form-select" multiple required>
                            <option value="">Loading...</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="eic" class="form-label">EIC</label>
                        <select id="eic" name="eic" class="form-select" required>
                            <option value="">Select EIC</option>
                            <% eics.forEach(eic => { %>
                                <option value="<%= eic.name %>"><%= eic.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="department" class="form-label">Department</label>
                        <select id="department" name="department" class="form-select" required>
                            <option value="">Select Department</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" name="location" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="severity" class="form-label">Severity</label>
                        <select id="severity" name="severity" class="form-select" required>
                            <option value="">Select Severity</option>
                            <option value="small">Small</option>
                            <option value="medium">Medium</option>
                            <option value="large">Large</option>
                        </select>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" name="description" class="form-control" rows="4" required></textarea>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label for="file" class="form-label">Upload File (Optional)</label>
                        <input type="file" id="file" name="file" class="form-control">
                    </div>
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-cta">Submit Observation</button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 NTPC Safety Observation System. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS for Animations and Dynamic Dropdowns -->
    <script>
        // GSAP Animations
        gsap.registerPlugin(ScrollTrigger);

        // Hero Section Animations
        gsap.from(".hero-content h1", { opacity: 0, y: 50, duration: 1, delay: 0.5 });
        gsap.from(".hero-content p", { opacity: 0, y: 50, duration: 1, delay: 1 });
        gsap.from(".btn-cta", { opacity: 0, y: 50, duration: 1, delay: 1.5 });

        // Feature Cards Animation on Scroll
        gsap.from(".feature-card", {
            scrollTrigger: {
                trigger: ".features-section",
                start: "top 80%",
            },
            opacity: 0,
            y: 50,
            duration: 1,
            stagger: 0.3
        });

        // Dynamic Zone Leaders Dropdown
        document.getElementById('zone').addEventListener('change', async function() {
            const zone = this.value;
            const zoneLeadersSelect = document.getElementById('zoneLeaders');
            zoneLeadersSelect.innerHTML = '<option value="">Loading...</option>';

            if (zone) {
                const response = await fetch(`/zone-leaders?zone=${zone}`);
                const zoneLeaders = await response.json();
                zoneLeadersSelect.innerHTML = '<option value="">Select Zone Leader</option>';
                zoneLeaders.forEach(leader => {
                    const option = document.createElement('option');
                    option.value = leader.name;
                    option.textContent = leader.name;
                    zoneLeadersSelect.appendChild(option);
                });
            }
        });

        // Dynamic Departments Dropdown
        window.onload = async function() {
            const departmentSelect = document.getElementById('department');
            const response = await fetch('/departments');
            const departments = await response.json();
            departmentSelect.innerHTML = '<option value="">Select Department</option>';
            departments.forEach(dept => {
                const option = document.createElement('option');
                option.value = dept;
                option.textContent = dept;
                departmentSelect.appendChild(option);
            });
        };
    </script>
</body>
</html>