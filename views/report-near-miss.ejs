<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Report Near Miss Incidents - NTPC Safety Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: url('/images/bg.jpg') no-repeat center center fixed;
      background-size: cover;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      margin: 0;
    }
    .form-container {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      padding: 2rem;
      max-width: 500px;
      width: 100%;
      margin: auto 2rem auto auto;
    }
    .form-title {
      color: #003087;
      font-weight: bold;
    }
    .btn-submit {
      background-color: #003087;
      border: none;
      padding: 0.75rem;
      font-size: 1.1rem;
    }
    .btn-submit:hover {
      background-color: #00205b;
    }
    .user-name {
      color: #e91e63;
    }
    @media (max-width: 768px) {
      .form-container {
        margin: 1rem auto;
        max-width: 90%;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container-fluid flex-grow-1 d-flex">
    <% if (['normal', 'eic', 'zone_leader', 'admin'].includes(user.role)) { %>
      <div class="form-container">
        <h2 class="form-title mb-4">Report Near Miss Incidents for <span class="user-name"><%= user.name %></span></h2>
        <% if (successMessage) { %>
          <div class="alert alert-success" role="alert"><%= successMessage %></div>
        <% } %>
        <% if (errorMessage) { %>
          <div class="alert alert-danger" role="alert"><%= errorMessage %></div>
        <% } %>
        <form action="/report-near-miss/submit" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="incidentDate" class="form-label">Incident Date</label>
            <input type="date" class="form-control" id="incidentDate" name="incidentDate" required>
          </div>
          <div class="mb-3">
            <label for="incidentZone" class="form-label">Incident Zone</label>
            <select class="form-select" id="incidentZone" name="incidentZone" required>
              <option value="" disabled selected>Select a zone</option>
              <% zones.forEach(zone => { %>
                <option value="<%= zone %>"><%= zone %></option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label for="incidentLocation" class="form-label">Incident SubArea/Location</label>
            <input type="text" class="form-control" id="incidentLocation" name="incidentLocation" placeholder="Enter specific location" required>
          </div>
          <div class="mb-3">
            <label for="incidentDetails" class="form-label">Near Miss Incident Details</label>
            <textarea class="form-control" id="incidentDetails" name="incidentDetails" rows="5" placeholder="Describe the near miss incident" required></textarea>
          </div>
          <div class="mb-3">
            <label for="incidentFile" class="form-label">Choose File</label>
            <input type="file" class="form-control" id="incidentFile" name="incidentFile" accept=".pdf,.jpg,.jpeg,.doc,.docx">
          </div>
          <button type="submit" class="btn btn-submit text-white w-100">Submit</button>
        </form>
      </div>
    <% } else { %>
      <div class="container text-center text-white">
        <h2 class="form-title">Unauthorized Access</h2>
        <p>You do not have permission to report near miss incidents.</p>
        <a href="/dashboard" class="btn btn-primary">Return to Dashboard</a>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>